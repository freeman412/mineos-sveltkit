{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext" ],
    "WriteTo": [
      { "Name": "Console" }
    ]
  },
  "ConnectionStrings": {
    "Default": "Data Source=./data/mineos.db"
  },
  "ApiKey": {
    "SeedKey": "",
    "StaticKey": ""
  },
  "Auth": {
    "SeedUsername": "",
    "SeedPassword": "",
    "Jwt": {
      "Issuer": "MineOS",
      "Audience": "MineOS.Web",
      "SigningKey": "",
      "ExpiresMinutes": 60
    }
  },
  "Host": {
    "BaseDirectory": "/var/games/minecraft",
    "LocalesPath": "html/locales",
    "ServersPathSegment": "servers",
    "ProfilesPathSegment": "profiles",
    "ImportPathSegment": "import",
    "BackupsPathSegment": "backups"
  },
  "AllowedHosts": "*"
}
